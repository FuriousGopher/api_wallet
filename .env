NODE_ENV=local
APP_PORT=3000
APP_HOST=0.0.0.0

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=50
THROTTLE_BLOCK_DURATION=0

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=wallet
DATABASE_PASSWORD=wallet
DATABASE_NAME=wallet
DATABASE_SYNC=true
DATABASE_LOGGING=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_USER=
REDIS_PASSWORD=
REDIS_TTL=600
CACHE_PREFIX=wallet

# Swagger
SWAGGER_USER=wallet
SWAGGER_PASSWORD=wallet

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=wallet.events
RABBITMQ_PREFETCH=20
RABBITMQ_RETRY_ATTEMPTS=5
RABBITMQ_RETRY_DELAY=2000
RABBITMQ_DLX=wallet.dlx
RABBITMQ_DLQ=wallet.events.dlq

# Idempotency
IDEMPOTENCY_TTL_HOURS=48

# Outbox
OUTBOX_ENABLED=true
